{
  "manifest_version": 3,
  "name": "Tab Domain Classifier",
  "version": "1.0",
  "description": "自动将相同域名的标签页分组管理",
  
  "permissions": [
    "tabs",
    "storage",
    "tabGroups"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Domain Classifier"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}