{
  "manifest_version": 3,
  "name": "TabFlow",
  "version": "2.0",
  "description": "智能标签页分组管理，让浏览更流畅",
  
  "permissions": [
    "tabs",
    "storage",
    "tabGroups"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "TabFlow - 智能标签页分组"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}